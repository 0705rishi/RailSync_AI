# RailSync AI Environment Configuration

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security
SECRET_KEY=railsync-ai-super-secret-key-change-in-production

# Database (for future use)
DATABASE_URL=sqlite:///railsync.db

# AI Model Parameters
GA_POPULATION_SIZE=50
GA_GENERATIONS=30
GA_MUTATION_RATE=0.1

# System Parameters
SAFETY_BUFFER_MINUTES=5
CONFLICT_DISTANCE_THRESHOLD=2
MAX_TRAIN_SPEED=160

# API Settings
API_RATE_LIMIT=100
REAL_TIME_UPDATE_INTERVAL=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=railsync.log
